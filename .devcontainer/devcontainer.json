{
  "name": "Flutter",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "remoteUser": "vscode",
  "features": {
    "git": "latest"
  },
  "remoteEnv": {
    "PATH": "/opt/flutter/bin:${containerEnv:PATH}",
    "SHELL": "/bin/zsh"
  },
  "settings": {
    "terminal.integrated.profiles.linux": {
      "zsh": {
        "path": "zsh",
        "args": ["-l"]
      }
    },
    "terminal.integrated.defaultProfile.linux": "zsh"
  },
  "customizations": {
    "vscode": {
      "extensions": ["Dart-Code.dart-code", "Dart-Code.flutter"]
    }
  }
}
